@model IEnumerable<Aprendizado.Entity.Endereco>

@{
    ViewBag.Title = "ListaEnderecos";
}

<h2>Endereços do @ViewBag.NomePessoa</h2>

<p>
    @Html.ActionLink("Novo", "EditEndereco", new { idEndereco = 0, idPessoa = @ViewBag.idPessoa })
    @Html.ActionLink("Voltar", "Edit", new { id = @ViewBag.idPessoa })
</p>


    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">Gerenciamento de Pessoas
                    </h1>
                </div>
            </div>
            <!-- /. ROW  -->

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                         <tr>


        <th>
            Logradouro
        </th>
        <th>
            Número
        </th>
        <th>
            CEP
        </th>
        <th>
            Cidade
        </th>
        <th>
            Estado
        </th>
        <th>
            Tipo
        </th>
        <th></th>
        <th></th>
    </tr>
            
        </thead>
        <tbody>
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Logradouro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.CEP)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Cidade.Descricao)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Cidade.UF)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TipoEndereco.Descricao)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditEndereco", new { idEndereco = item.idEndereco, idPessoa = @ViewBag.idPessoa }) |
            @Html.ActionLink("Delete", "DeleteEndereco",
                new { idEndereco = item.idEndereco }, 
                new { @onclick = "return confirm('Confirma Exclusão?');" })
        </td>
    </tr>
}

                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
        </div>
    </div>
