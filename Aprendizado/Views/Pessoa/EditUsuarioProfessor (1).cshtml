@model Aprendizado.Entity.Usuario
@{
    ViewBag.Title = "EditUsuarioAluno";
}
<h2>Editar Usuario</h2>
@using (Html.BeginForm())
{

    <fieldset>
        <legend>Endereco</legend>
        @Html.HiddenFor(model => model.idUsuario)
        @Html.HiddenFor(model => model.idPessoa)
        
        <div class="editor-label">
            <b>Login: </b>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Login)
        </div>

        <div id="divCidades">
            <div class="editor-label">
                <b>Senha: </b>
            </div>
            <div class="editor-field">
                @Html.PasswordFor(model => model.Senha)
            </div>
        <div class="editor-label">
            <b>Confirme a Senha: </b>
        </div>
        <div class="editor-label">
            @Html.Password("Confirmar")
        </div>

        </div>

        <div class="editor-label">
            <b>Email: </b>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.email)
        </div>
        
        <p>
            <input type="submit" value="Save" onclick="return validar();" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Voltar", "ListaUsuarios", new { idPessoa = Model.idPessoa })
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $("#idPerfil").hide();

    function validar() {
        if ($("#Login").val() == "") {
            alert('O Login é obrigatório');
            return false;
        }
        if ($("#Senha").val() == "") {
            alert('A Senha é obrigatória');
            return false;
        }
        if ($("#Login").val().length < 3) {
            alert('Digite no minimo 3 caracteres no login');
            return false;
        }
        if ($("#Senha").val().length < 5 || $("#Senha").val().length > 20) {
            alert('Informe uma senha de no mínimo 5 e no máximo 20 caracteres');
            return false;
        }
        if ($("#Confirmar").val() == "") {
            alert('A Confirmação da senha é obrigatoria');
            return false;
        }
        if ($("#Senha").val() != $("#Confirmar").val()) {
            alert('Senhas não conferem');
            return false;
        }

        return true;
    }
</script>