@model Aprendizado.Entity.Questao_Resposta

@{
    ViewBag.Title = "EditResposta";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">@ViewBag.Pergunta
                </h1>
            </div>
        </div>
        <!-- /. ROW  -->
        @using (Html.BeginForm())
        {
            <!-- /. ROW  -->
            @Html.HiddenFor(model => model.idQuestaoResposta)

            <div class="form-group">
	        @Html.LabelFor(model => model.Alternativa, new { @class = "control-label col-md-2" })
	            <div class="col-md-10">
		            @Html.DropDownList("idAlternativa", null, new { @class = "form-control" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <input type="button" class="btn btn-default" value="Voltar" onclick="    history.go(-1)">
                    <input type="submit" value="Salvar" class="btn btn-default" onclick="    return validar();" />
                </div>
            </div>
        }
    </div>
</div>

