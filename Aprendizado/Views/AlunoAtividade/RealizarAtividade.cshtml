@model IEnumerable<Aprendizado.Entity.Pergunta_Atividade>

@{
    ViewBag.Title = "RealizarAtividade";
}

<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                
                    <hr class="section-heading-spacer">

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Olá @ViewBag.NomeAluno!</br> Estas são as perguntas da Atividade @ViewBag.Atividade
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                <th>
                                    Enunciado
                                </th>
                                <th>
                                </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
    
        <td>
            @Html.DisplayFor(modelItem => item.Pergunta.Enunciado)
        </td>


        <td>
            @Html.ActionLink("Responder", "EditResposta", new { idAlunoAtividade = ViewBag.idAlunoAtividade, idPergunta = item.idPergunta })
        </td>
    </tr>
}
 </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
                @Html.ActionLink("Desistir", "Edit", new { id = @ViewBag.idPergunta }) || 
                @Html.ActionLink("Finalizar", "Finalizar", new { idAlunoAtividade = @ViewBag.idAlunoAtividade })
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
</body>
