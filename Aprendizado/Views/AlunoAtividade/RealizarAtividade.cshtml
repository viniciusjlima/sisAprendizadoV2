@model IEnumerable<Aprendizado.Entity.Pergunta_Atividade>

@{
    ViewBag.Title = "RealizarAtividade";
}

    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">Estas são as perguntas da Atividade @ViewBag.Atividade
                    </h1>
                    <br />
                </div>
            </div>
            <!-- /. ROW  -->

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                         <tr>


        <th>
                                    Enunciado
                                </th>
        <th></th>

        
    </tr>
            
        </thead>
        <tbody>
  @foreach (var item in Model)
{
    <tr>
    
        <td>
            @Html.DisplayFor(modelItem => item.Pergunta.Enunciado)
        </td>


        <td>
            @Html.ActionLink("Responder", "EditResposta", new { idAlunoAtividade = ViewBag.idAlunoAtividade, idPergunta = item.idPergunta })
        </td>
    </tr>
}


                                    </tbody>
                                </table>
                                @Html.ActionLink("Desistir", "Edit", new { id = @ViewBag.idPergunta }, new { @class = "btn btn-default", @style = "color:#09192A "}) &nbsp
                                @Html.ActionLink("Finalizar", "Finalizar", new { idAlunoAtividade = @ViewBag.idAlunoAtividade }, new { @class = "btn btn-default", @style = "color:#09192A "})
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
        </div>
    </div>


