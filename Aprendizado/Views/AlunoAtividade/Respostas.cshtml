@model IEnumerable<Aprendizado.Entity.Questao_Resposta>

@{
    ViewBag.Title = "Respostas";
}

<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
               
                    <hr class="section-heading-spacer">

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Suas respostas da atividade @ViewBag.IdentificacaoAtividade: @ViewBag.TiTuloAtividade
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Pergunta
                                    </th>
                                    <th>
                                        Resposta
                                    </th>
                                    <th>
                                        Correção
                                    </th>

                            </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pergunta.Enunciado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alternativa.Descricao)
        </td>
        <td>
            @if (item.idAlternativa == item.Pergunta.Correta)
            {
                <img src="~/Images/Icones/correto.png" width="10%"/>
            }else{
                <img src="~/Images/Icones/errado.png" width="10%"/>
            }
        </td>
    </tr>
}
 </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>


