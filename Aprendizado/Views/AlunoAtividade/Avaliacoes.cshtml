@model IEnumerable<Aprendizado.Entity.Atividade>
<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                
                    <hr class="section-heading-spacer">

                    <div class="clearfix"></div>

<div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gerenciamento de Avaliações id od aluno @ViewBag.IdAluno 
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
<table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

        <th>
            @Html.DisplayNameFor(model => model.Identificacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            Disciplina
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataAbertura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEncerramento)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Identificacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disciplina.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataAbertura.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataEncerramento.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idAtividade)
        </td>
        <td>
            @Html.ActionLink("Acessar", "VerificaAlunoAtividade", new { idAluno = ViewBag.IdAluno, idAtividade = item.idAtividade })
        </td>
    </tr>
}
 </table>



                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>

