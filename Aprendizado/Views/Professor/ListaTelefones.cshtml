@model IEnumerable<Aprendizado.Entity.Telefone>

@{
    ViewBag.Title = "ListaTelefones";
}

    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">Gerenciamento de Telefones<small>@ViewBag.NomePessoa</small>
                    </h1>
                    @Html.ActionLink("Incluir", "EditTelefone", new { idPessoa = ViewBag.idPessoa, idTelefone = 0 }, new { @class = "btn btn-default", @style = "color:#09192A "})
                    <br />
                    <br />
                </div>
            </div>
            <!-- /. ROW  -->

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                         <tr>


        <th>
            Tipo Telefone
        </th>
        <th>
            Número
        </th>
        <th></th>

        
    </tr>
            
        </thead>
        <tbody>
   @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoTelefone.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "EditTelefone", new { idTelefone = item.idTelefone, idPessoa = @ViewBag.idPessoa }) |
            @Html.ActionLink("Delete", "DeleteTelefone",
                new { idTelefone = item.idTelefone }, 
                new { @onclick = "return confirm('Confirma Exclusão?');" })
        </td>
    </tr>
}


                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
        </div>
    </div>
