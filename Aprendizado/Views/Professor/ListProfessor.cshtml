@model IEnumerable<Aprendizado.Entity.Professor>

<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>
            Nome
        </th>
        <th>
            CPF
        </th>
        <th>
            Especializacao
        </th>
        <th>
            Endereços
        </th>
        <th>
            Telefones
        </th>
        <th>
            Usuarios
        </th>
        <th>
            Editar
        </th>
        <th>
            Excluir
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pessoa.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pessoa.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especializacao)
        </td>
        <td>
             @Html.ActionLink("Endereços", "ListaEnderecos", new { idPessoa = item.idPessoa })
        </td>
        <td>
             @Html.ActionLink("Telefones", "ListaTelefones", new { idPessoa = item.idPessoa })
        </td>
        <td>
            @Html.ActionLink("Usuarios", "ListaUsuarios", new { idPessoa = item.idPessoa })
        </td>
        <td>
            @Html.ActionLink("Editar", "EditPessoa", new { id=item.idPessoa })
        </td>
        <td>
            @Html.ActionLink("Excluir", "DeleteProfessor", new { id=item.idPessoa })
        </td>
    </tr>
    
}

</table>

<script>
    function tipoProfessor(id) {
        editar(id);
    }
</script>
