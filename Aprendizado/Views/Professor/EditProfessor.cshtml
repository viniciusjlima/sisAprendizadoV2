@model Aprendizado.Entity.Professor

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Informar especialização do @ViewBag.NomePessoa</h4>
        <hr />
    
        @Html.HiddenFor(model => model.idProfessor)
        @Html.HiddenFor(model => model.idPessoa)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Especializacao, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
    	        @Html.TextBoxFor(model => model.Especializacao, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                    <br />   
                    <input type="button"  class="btn btn-default" value="Voltar" onClick="    history.go(-1)">  
                    <input type="submit" value="Salvar"  class="btn btn-default" onclick="    return validar();"/> 
                  </div>
                </div>
            </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@if (ViewBag.Error != null && ViewBag.Error != "")
{
    <script>
        alert('@Html.Raw(ViewBag.Error)');
    </script>
}

<script>
    function validar() {

        if ($("#Especializacao").val() == "") {
            alert("Informe uma Especialização");
            return false;
        }

        return true;
    }

</script>