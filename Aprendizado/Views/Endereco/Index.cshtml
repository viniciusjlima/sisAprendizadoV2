@model IEnumerable<Aprendizado.Entity.Endereco>

@{
    ViewBag.Title = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Gerenciamento de Enderecos
                </h1>
            </div>
        </div>
        <!-- /. ROW  -->

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                     <tr>


        <th>
            Estado
        </th>
        <th>
            Cidade
        </th>
        <th>
            Logradouro
        </th>
        <th>
            Numero
        </th>
        <th>
            CEP
        </th>
        <th>
            Complemento
        </th>
        <th></th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade.Estado.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Logradouro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CEP)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Complemento)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idEndereco }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idEndereco }, new { @onclick = "return confirm('Tem certeza que deseja excluir?')" })
        </td>
    </tr>
}

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
</div>