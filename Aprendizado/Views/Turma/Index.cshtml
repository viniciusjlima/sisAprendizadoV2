@model IEnumerable<Aprendizado.Entity.Turma>

@{
    ViewBag.Title = "Index";
}

    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">Gerenciamento de Turmas
                    </h1>
                    <h2><small>
                        @Html.ActionLink("Nova Turma", "Edit", new { id = 0 }, new { @class = "btn btn-default", @style = "color:#09192A "})
                        </small></h2>
                    <br />
                </div>
            </div>
            <!-- /. ROW  -->

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                         <tr>


        <th>
            Identificação
        </th>
        <th></th>

        
    </tr>
            
        </thead>
        <tbody>
   @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Identificacao)
        </td>
        <td>
            @Html.ActionLink("Disciplinas da Turma", "ListaDisciplinaTurma", new { idTurma = item.idTurma }, new { @class = "btn btn-default", @style = "color:#09192A "})
        
            @Html.ActionLink("Editar", "Edit", new { id=item.idTurma }, new { @class = "btn btn-default", @style = "color:#09192A "})
            
            @Html.ActionLink("Excluir", "Delete", new { id=item.idTurma}, new { @onclick = "return confirm('Tem certeza?');",@class = "btn btn-default", @style = "color:#09192A "})
        </td>
    </tr>
}


                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
        </div>
    </div>