@model IEnumerable<Aprendizado.Entity.Tema>

@{
    ViewBag.Title = "Index";
}

    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                <h1 class="page-header">Gerenciamento de Temas
                </h1>
                <h2><small>@Html.ActionLink("Novo Tema", "Edit", new { id = 0 }, new { @class = "btn btn-default", @style = "color:#09192A " })
                </small></h2>
                <br />
            </div>
            </div>
            <!-- /. ROW  -->

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                         <tr>


        <th>
            Disciplina
        </th>
        <th>
            Descricao
        </th>

        
    </tr>
            
        </thead>
        <tbody>
   @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Disciplina.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idTema }, new { @class = "btn btn-default", @style = "color:#09192A "})
        
            @Html.ActionLink("Excluir", "Delete", new { id = item.idTema }, new { @onclick = "return confirm('Tem certeza que deseja excluir?')", @class = "btn btn-default", @style = "color:#09192A "})
        </td>
    </tr>
}


                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
        </div>
    </div>