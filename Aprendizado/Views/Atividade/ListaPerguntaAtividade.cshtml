@model IEnumerable<Aprendizado.Entity.Pergunta_Atividade>

@{
    ViewBag.Title = "ListaPerguntaAtividade";
}


<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">Gerenciamento de Atividades <small>- Listas de Pergutas -</small>
                    </h1>
                    <h2><small>@Html.ActionLink("Inserir", "EditPerguntaAtividade", 
                    new {idAtividade = ViewBag.idAtividade, idPerguntaAtividade = 0}, new { @class = "btn btn-default", @style = "color:#09192A "})</small></h2>
                    <br />
                </div>
            </div>
        <!-- /. ROW  -->

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                     <tr>

        <th>
            Identificação
        </th>
        <th>
            Titulo
        </th>
        <th>
            Enunciado
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Pergunta.Identificacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pergunta.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pergunta.Enunciado)
        </td>
        <td>
            @Html.ActionLink("Remover", "DeletePerguntaAtividade", 
            new { idPerguntaAtividade = item.idPerguntaAtividade }, new { @class = "btn btn-default", @style = "color:#09192A ", @onclick = "return confirm('Tem certeza que deseja excluir?')" })
        </td>
    </tr>
}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
</div>