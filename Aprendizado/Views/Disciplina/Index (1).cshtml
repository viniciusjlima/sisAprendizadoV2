@model IEnumerable<Aprendizado.Entity.Disciplina>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Disciplinas</h2>

<p>
    @Html.ActionLink("Novo", "Edit", new { id = 0 })
</p>
<table>
    <tr>
        <th>
            Descrição
        </th>
        <th>
            Curso
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.Descricao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idDisciplina }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idDisciplina}, new { @onclick = "return confirm('Tem certeza que deseja excluir?')" })
        </td>
    </tr>
}

</table>
