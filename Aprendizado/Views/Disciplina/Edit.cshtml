@model Aprendizado.Entity.Disciplina

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Editar Disciplina</h4>
        <hr />

        @Html.HiddenFor(model => model.idDisciplina)

        <div class="form-group">
            @Html.LabelFor(model => model.Curso, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idCurso", "Selecione um")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
            </div>
        </div>




            <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <div>
    @if (Model.idDisciplina != 0)
    {
        @Html.ActionLink("Professores da Disciplina", "ListaProfessorDisciplina", new { idDisciplina = Model.idDisciplina })
    }
    <br />
    <br />
    <br />   
    <input type="button"  class="btn btn-default" value="Voltar" onClick="    history.go(-1)">  <input type="submit" value="Save"  class="btn btn-default" onclick="    return validar();"/> 
</div>
       </div>
        </div>
     </div>
    
}


 
 
@if (ViewBag.Erro != null && ViewBag.Erro != "")
{
    <script>
        alert('@ViewBag.Erro');
    </script>
}

<script>
    function validar() {
        if ($("#Descricao").val() == "") {
            alert('A descrição é obrigatória');
            return false;
        }
        if ($("#idCurso").val() == "") {
            alert('O Curso é obrigatório');
            return false;
        }

        return true;
    }
</script>