@model IEnumerable<Aprendizado.Entity.Endereco>

@{
    ViewBag.Title = "ListaEnderecos";
}

<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <p>
    @Html.ActionLink("Novo Endereço", "EditEndereco", new { idPessoa = ViewBag.idPessoa, idEndereco = 0 })
</p>
                    <hr class="section-heading-spacer">

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gerenciamento de Endereços do @ViewBag.NomePessoa
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

        <th>
            Logradouro
        </th>
        <th>
            Número
        </th>
        <th>
            CEP
        </th>
        <th>
            Cidade
        </th>
        <th>
            Estado
        </th>
        <th>
            Tipo
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Logradouro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.CEP)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Cidade.Descricao)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Cidade.UF)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TipoEndereco.Descricao)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditEndereco", new { idEndereco = item.idEndereco, idPessoa = @ViewBag.idPessoa }) |
            @Html.ActionLink("Delete", "DeleteEndereco",
                new { idEndereco = item.idEndereco }, 
                new { @onclick = "return confirm('Confirma Exclusão?');" })
        </td>
    </tr>
}

 </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
                <input type="button"  class="btn btn-default" value="Voltar" onClick="    history.go(-1)">
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>


