@model IEnumerable<Aprendizado.Entity.Usuario>

@{
    ViewBag.Title = "ListaUsuarios";
}

<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <p>
                    @Html.ActionLink("Novo Usuario", "EditUsuario", new { idPessoa = ViewBag.idPessoa, idUsuario = 0 })
                </p>
                    <hr class="section-heading-spacer">

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gerenciamento de Usuarios do @ViewBag.NomePessoa
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

        <th>
            Login
        </th>
        <th>
            Email
        </th>
        <th>
            Tipo Perfil
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Perfil.Descricao)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditUsuario", new { idUsuario = item.idUsuario, idPessoa = @ViewBag.idPessoa }) |
            @Html.ActionLink("Delete", "DeleteUsuario",
                new { idUsuario = item.idUsuario }, 
                new { @onclick = "return confirm('Confirma Exclusão?');" })
        </td>
    </tr>
}
 </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
                <input type="button"  class="btn btn-default" value="Voltar" onClick="    history.go(-1)">  
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>
