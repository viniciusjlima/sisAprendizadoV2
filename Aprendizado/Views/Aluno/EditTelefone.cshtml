@model Aprendizado.Entity.Telefone
@{
    ViewBag.Title = "EditTelefone";
}
@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Editar telefone do aluno @ViewBag.NomePessoa</h4>
        <hr />
        @Html.HiddenFor(model => model.idTelefone)
        @Html.HiddenFor(model => model.idPessoa)
        
         <div class="form-group">
            @Html.LabelFor(model => model.TipoTelefone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTipoTelefone")
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Numero, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Numero, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
            <br />   
            <input type="button"  class="btn btn-default" value="Voltar" onClick="    history.go(-1)">  
            <input type="submit" value="salvar"  class="btn btn-default" onclick="    return validar();"/> 
          </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

 <script>
     function validar() {

         if ($("#Numero").val() == "") {
             alert("Informe um Número");
             return false;
         }
         return true;
     }

</script>
