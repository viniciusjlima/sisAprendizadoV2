@model IEnumerable<Aprendizado.Entity.Telefone>

@{
    ViewBag.Title = "ListaTelefones";
}

<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <p>
                    @Html.ActionLink("Novo Telefone", "EditTelefone", new { idPessoa = ViewBag.idPessoa, idTelefone = 0 })
                </p>
                    <hr class="section-heading-spacer">

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gerenciamento de telefones do @ViewBag.NomePessoa
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

        <th>
            Tipo Telefone
        </th>
        <th>
            Número
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoTelefone.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "EditTelefone", new { idTelefone = item.idTelefone, idPessoa = @ViewBag.idPessoa }) |
            @Html.ActionLink("Delete", "DeleteTelefone",
                new { idTelefone = item.idTelefone }, 
                new { @onclick = "return confirm('Confirma Exclusão?');" })
        </td>
    </tr>
}
 </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
             <input type="button"  class="btn btn-default" value="Voltar" onClick="    history.go(-1)">  
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>

