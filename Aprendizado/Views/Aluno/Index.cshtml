@model IEnumerable<Aprendizado.Entity.Aluno>

@{
    ViewBag.Title = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Gerenciamento de Alunos
                </h1>
                <h2><small>@Html.ActionLink("Incluir", "EditPessoa", new { id = 0 }, new { @class = "btn btn-default", @style = "color:#09192A " })</small></h2>

                    <br />
            </div>
        </div>
        <!-- /. ROW  -->

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>


                                        <th>Nome
                                        </th>
                                        <th>CPF
                                        </th>
                                        <th>Nascimento
                                        </th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pessoa.CPF)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pessoa.Nascimento.Date)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Endereços", "ListaEnderecos", new { idPessoa = item.idPessoa })
                                            </td>
                                            <td>
                                                @Html.ActionLink("Telefones", "ListaTelefones", new { idPessoa = item.idPessoa })
                                            </td>
                                            <td>
                                            @Html.ActionLink("Usuarios", "ListaUsuarios", new { idPessoa = item.idPessoa })

                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { item.idAluno }) </td>
                                            <td>
                                                @Html.ActionLink("Deletar", "Delete", new { id = item.idAluno }, new { @onclick = "return confirm('Tem certeza que deseja excluir?')" })
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
</div>
