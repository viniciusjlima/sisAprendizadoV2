@model Aprendizado.Entity.Usuario

@{
    ViewBag.Title = "EditUsuarioAluno";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Informar login para o aluno @ViewBag.Titulo</h4>
        <hr />
    
        @Html.HiddenFor(model => model.idUsuario)
        @Html.HiddenFor(model => model.idPessoa)
        
        <div class="form-group">
    @Html.LabelFor(model => model.Login, new { @class = "control-label col-md-2" })
    <div class="col-md-3">
    	@Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
    </div>
</div>

        <div id="divSenha">
            <div class="form-group">
                @Html.LabelFor(model => model.Senha, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
    	            @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Confirme", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
    	        @Html.Password("Confirmar")
            </div>
        </div>
            
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
    	        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            </div>
        </div>
        
        <br />   
        <input type="button"  class="btn btn-default" value="Voltar" onClick="    history.go(-1)">  <input type="submit" value="Salvar"  class="btn btn-default" onclick="    return validar();"/> 
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $("#idPerfil").hide();
</script>

<script>
    function validar() {
        if ($("#Login").val() == "") {
            alert('O Login é obrigatório');
            return false;
        }
        if ($("#Senha").val() == "") {
            alert('A Senha é obrigatória');
            return false;
        }
        if ($("#Login").val().length < 3) {
            alert('Digite no minimo 3 caracteres no login');
            return false;
        }
        if ($("#Senha").val().length < 5 || $("#Senha").val().length > 20) {
            alert('Informe uma senha de no mínimo 5 e no máximo 20 caracteres');
            return false;
        }
        if ($("#Confirmar").val() == "") {
            alert('A Confirmação da senha é obrigatoria');
            return false;
        }
        if ($("#Senha").val() != $("#Confirmar").val()) {
            alert('Senhas não conferem');
            return false;
        }

        return true;
    }
</script>