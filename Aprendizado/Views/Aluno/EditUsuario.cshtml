@model Aprendizado.Entity.Usuario

@{
    ViewBag.Title = "EditUsuarioAluno";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Gerenciamento de Professor<small> - @ViewBag.Titulo - </small>
                </h1>
            </div>
        </div>
        <!-- /. ROW  -->
        @using (Html.BeginForm())
        {
            <!-- /. ROW  -->
            @Html.HiddenFor(model => model.idUsuario)
        @Html.HiddenFor(model => model.idPessoa)
        

             <div class="form-group">
    @Html.LabelFor(model => model.Login, new { @class = "control-label col-md-2" })
    <div class="col-md-3">
    	@Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
    </div>
</div>
            <br />
            <br />
        <div id="divSenha">
            <div class="form-group">
                @Html.LabelFor(model => model.Senha, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
    	            @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                </div>
            </div>
        </div>
            <br /><br />
        <div class="form-group">
            @Html.Label("Confirme", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
    	        @Html.Password("Confirmar", new { @class = "form-control" })
            </div>
        </div>
            <br /><br />
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
    	        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            </div>
        </div>
            <br /><br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <input type="button" class="btn btn-default" value="Voltar" onclick="    history.go(-1)">
                    <input type="submit" value="Salvar" class="btn btn-default" onclick="    return validar();" />
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $("#idPerfil").hide();
</script>

<script>
    function validar() {
        if ($("#Login").val() == "") {
            alert('O Login é obrigatório');
            return false;
        }
        if ($("#Senha").val() == "") {
            alert('A Senha é obrigatória');
            return false;
        }
        if ($("#Login").val().length < 3) {
            alert('Digite no minimo 3 caracteres no login');
            return false;
        }
        if ($("#Senha").val().length < 5 || $("#Senha").val().length > 20) {
            alert('Informe uma senha de no mínimo 5 e no máximo 20 caracteres');
            return false;
        }
        if ($("#Confirmar").val() == "") {
            alert('A Confirmação da senha é obrigatoria');
            return false;
        }
        if ($("#Senha").val() != $("#Confirmar").val()) {
            alert('Senhas não conferem');
            return false;
        }

        return true;
    }
</script>