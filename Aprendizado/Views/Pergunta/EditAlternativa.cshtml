@model Aprendizado.Entity.Alternativa

@{
    ViewBag.Title = "EditAlternativa";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Gerenciamento de Curso<small> - @ViewBag.Titulo - </small>
                </h1>
            </div>
        </div>
        <!-- /. ROW  -->
        @using (Html.BeginForm())
        {
            <!-- /. ROW  -->
            @Html.HiddenFor(model => model.idAlternativa)
            @Html.HiddenFor(model => model.idPergunta)

             <div class="form-group">
            @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
    	        @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <input type="button" class="btn btn-default" value="Voltar" onclick="    history.go(-1)">
                    <input type="submit" value="Salvar" class="btn btn-default" onclick="    return validar();" />
                </div>
            </div>
        }
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

 <script>
     function validar() {

         if ($("#Descricao").val() == "") {
             alert("Informe uma Descrição");
             return false;
         }
         return true;
     }

</script>