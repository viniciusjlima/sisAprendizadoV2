@model IEnumerable<Aprendizado.Entity.Alternativa>

@{
    ViewBag.Title = "ListaAlternativas";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Gerenciamento de Perguntas<small> - Alternativas da pergunta @ViewBag.Descricao - </small>
                </h1>
            </div>
        </div>
        <!-- /. ROW  -->

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                     <tr>


        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>

        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditAlternativa", new { idAlternativa = item.idAlternativa, idPergunta = @ViewBag.idPergunta }) |
            @Html.ActionLink("Delete", "DeleteAlternativa",
                new { idAlternativa = item.idAlternativa }, 
                new { @onclick = "return confirm('Confirma Exclusão?');" }) |
            
            @Html.ActionLink("Escolher como Correta", "EscolheCorreta", new { idAlternativa = item.idAlternativa, idPergunta = @ViewBag.idPergunta })
        </td>
    </tr>
}

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
</div>

