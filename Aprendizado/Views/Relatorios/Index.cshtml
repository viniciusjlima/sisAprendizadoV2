                    var obj = dados.listaErradasDisciplina[i];
                    lista.push({y:obj.Disciplina, b:obj.QtdErradas});
                }
                Morris.Bar({
                    element: 'morris-bar-chart-Erros',
                    data: lista,
                    xkey: 'y',
                    ykeys: ['b'],
                    labels: ['Erros'],
                    hideHover: 'auto',
